
<p id="notice"><%= notice %></p>
<div="container">
<p>
  <strong>Name:</strong>
  <%= @pin.name %>
</p>

<p>
  <strong>Photo:</strong>
  <%= image_tag(@pin.photo, :style => 'width:500px') %>
</p>

<p>
  <strong>Description:</strong>
  <%= @pin.description %>
</p>

<%= link_to 'Edit', edit_pin_path(@pin), :class => "btn btn-default btn-color", :style => "color:white;" %> |
<%= link_to 'Back', pins_path, :class => "btn btn-default btn-color", :style => "color:white;" %>

<%= link_to "Mas pins del mismo usuario", pinsof_path(@pin.user.id), :class => "btn btn-default btn-color", :style => "color:white;" %>
</div>
